		<view hlookat="183.076" vlookat="2.486" fovtype="MFOV" fov="120.000" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/VERDHIACHIA_20M2_P1_FC.tiles/preview.jpg" />

		<image if="!(webvr.isenabled OR device.mobilevr)" style="scene_1">
			<cube url="panos/VERDHIACHIA_20M2_P1_FC.tiles/%s/l%l/%v/l%l_%s_%v_%h.jpg" multires="512,640,1280" />
			<depthmap url="depthmaps/VERDHIACHIA_20M2_P1_SD.png" enabled ="true" scale="0.7" offset="0"/>
		</image>

		<image stereo="true" stereolabels="1|2" if="webvr.isenabled OR device.mobilevr" style="scene_1">
			<cube url="panos/VERDHIACHIA_20M2_P1_FC.tiles/vr/pano_%t_%s.jpg" />
			<depthmap url="depthmaps/VERDHIACHIA_20M2_P1_SD.png" enabled ="true" scale="0.7" offset="0"/>
		</image>
		
		<hotspot name="spot1" style="visual_floorspot" tx="155" ty="206" tz="12" keep="false" visible="true" enabled="true" linkedscene="scene_4"/>
		
		<hotspot name="spot2" style="visual_floorspot" tx="5.5" ty="145.2" tz="-235" keep="false" visible="true" enabled="true" linkedscene="scene_2"/>
